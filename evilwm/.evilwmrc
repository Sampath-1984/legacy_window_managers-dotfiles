#mask1=super
#mask2=ctrl+alt

term alacritty
bw 1
snap 5

app Notification-d
geometry +0+0
app xclock
dock
fixed
geometry +1226+0
app xosview
dock
fixed
geometry 174x322+0+444
app ipager
dock
fixed
app synapse
geometry 563x100+407+1
app gnome-screenshot
geometry 418x340+472+0
app Alacritty
geometry 680x381+685+386
app nmtui-term
