# Increase volume
"pactl set-sink-volume 0 +5%"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume 0 -5%"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute 0 toggle"
   XF86AudioMute

#Brightness Up
"backlight_control +3"
   XF86MonBrightnessUp

#Brightness Down
"backlight_control -3"
   XF86MonBrightnessDown

#Brightness Up(Gamma)
"blugon -S +250"
   XF86MonBrightnessUp+Shift

#Brightness Down(Gamma)
"blugon -S -250"
   XF86MonBrightnessDown+Shift

#Bluelight filter(ON)
"blugon -o -S 3400"
    Mod4+Z

#Bluelight filter(OFF)
"blugon -o -S 6600"
    Mod4+Shift+Z

###Change display orientation###
"xrandr -o left"
    Mod4+Left
"xrandr -o right"
    Mod4+Right
"xrandr -o normal"
    Mod4+Up
"xrandr -o inverted"
    Mod4+Down
