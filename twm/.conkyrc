conky.config = {
	alignment = 'bm',
	font = '-misc-vhs gothic-medium-r-normal--0-0-0-0-p-0-ascii-0',
	background = true, 
	cpu_avg_samples = 2,
	default_color = 'white',
	default_outline_color = 'white',
	default_shade_color = 'white',
	-- default_bar_size = 
	default_bar_height = 14,
	default_bar_width = 90,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	use_xft = false,
	gap_x = 0,
	gap_y = 5,
	net_avg_samples = 2,
	double_buffer = true,
	out_to_console = false,
	extra_newline = false,
	own_window = true,
	own_window_type = 'normal',
	own_window_transparent = false,
	own_window_colour = 'FFFFFF',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	minimum_width = 1920,
	maximum_width = 1920,
	update_interval = 1.0,
	uppercase = false,
	use_spacer = 'none',
	show_graph_scale = false,
	show_graph_range = false,
	update_interval = 1,
	update_interval_on_battery = 1,
	color1 = '000000',
}


conky.text = [[
${color1}[Desktop:${exec vdesk}] ${color}\
${color1}[cpu:${cpu}%]${cpubar 14 90} ${color}\
${color1}[ram:${mem}]${membar 14 90} ${color}\
${color1}[swap:${swap}]${swapbar 14 90} ${color}\
${color1}[${fs_free /home} free] ${color}\
${color1}[${exec powerprofilesctl get}]${color}\
${color1}[${cat /sys/class/power_supply/BAT0/status}: ${cat /sys/class/power_supply/BAT0/capacity}%] ${color}\
${color1}[mute:${execi 1 ~/twm-scripts/get-mute.sh}]${execibar 1 pamixer --get-volume} ${color}\
${color1}[uptime: ${uptime -p}]${color}\
${color1}/////////////// ${color}\
]]
